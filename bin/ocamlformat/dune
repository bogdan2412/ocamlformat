(rule
 (action
  (write-file
   ocamlformat_format.ml
   ; enable release renaming
   "include Ocamlformat_format_multi_version_alpha1"
   ; disable release renaming
   )))

(rule
 (action
  (write-file
   ocamlformat_lib.ml
   ; enable release renaming
   "include Ocamlformat_lib_multi_version_alpha1"
   ; disable release renaming
   )))

(rule
 (action
  (write-file
   bin_conf.ml
   ; enable release renaming
   "include Bin_conf_multi_version_alpha1"
   ; disable release renaming
   )))

(executable
 (name main)
 (public_name
  ; enable release renaming
  ocamlformat-multi_version_alpha1
  ; disable release renaming
  )
 (package
  ; enable release renaming
  ocamlformat-multi_version_alpha1
  ; disable release renaming
  )
 (flags
  (:standard
   ; enable release renaming
   -open
   Ocamlformat_stdlib_multi_version_alpha1
   ; disable release renaming
   ))
 (instrumentation
  (backend bisect_ppx))
 (libraries
  ; enable release renaming
  ocamlformat-lib-multi_version_alpha1
  bin_conf_multi_version_alpha1
  ; disable release renaming
  ))

(rule
 (with-stdout-to
  ocamlformat.1
  (run ./main.exe --help=groff)))

(install
 (section man)
 (files ocamlformat.1)
 (package ocamlformat))
